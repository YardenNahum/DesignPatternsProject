<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../../StyleSheets/HomePage.css, @../../StyleSheets/InsurancePurchasePage.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.InsurancePurchasePage.InsurancePageController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label fx:id="title" alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="Title" text="Insurance Company" textAlignment="CENTER" />

            <Region VBox.vgrow="ALWAYS" />

            <VBox id="FormBox" alignment="CENTER" maxWidth="700.0" spacing="20.0" VBox.vgrow="SOMETIMES">
               <children>
                  <Label id="FormTitle" fx:id="FormTitle" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Form Title" textAlignment="CENTER" />
                  <Label fx:id="AlertText" text="Label" visible="false" />

                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label prefWidth="150.0" styleClass="FormSubTitle" text="Name:" />
                        <TextField fx:id="NameInput" maxWidth="300.0" prefHeight="35.0" styleClass="InputField" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label prefWidth="150.0" styleClass="FormSubTitle" text="Family Name:" />
                        <TextField fx:id="FamilyNameInput" maxWidth="300.0" prefHeight="35.0" styleClass="InputField" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label prefWidth="150.0" styleClass="FormSubTitle" text="Date:" />
                        <DatePicker fx:id="DateInput" maxWidth="300.0" prefHeight="35.0" styleClass="InputField" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label alignment="TOP_LEFT" prefWidth="150.0" styleClass="FormSubTitle" text="Remarks:" />
                        <TextArea fx:id="RemarksInput" maxWidth="300.0" prefHeight="100.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button id="BackBtn" mnemonicParsing="false" onMouseClicked="#HandleGoBackToPreviousPage" prefHeight="50.0" prefWidth="150.0" styleClass="Button" text="Back" />
                  <Button id="RefreshBtn" mnemonicParsing="false" onMouseClicked="#HandleRefreshForm" prefHeight="50.0" prefWidth="150.0" styleClass="Button" text="Refresh" />
                  <Button id="SaveBtn" fx:id="saveButton" mnemonicParsing="false" onMouseClicked="#HandleSaveForm" prefHeight="50.0" prefWidth="150.0" styleClass="Button" text="Save Form" />
               </children>
            </HBox>
            <VBox alignment="CENTER" maxWidth="760.0">
               <children>
                  <Label id="ConfigurationText" fx:id="ConfigText" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" minHeight="80.0" prefHeight="-1" prefWidth="762.0" text="Loading configuration..." wrapText="true"  />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>